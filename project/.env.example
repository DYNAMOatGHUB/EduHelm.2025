# Django Settings
SECRET_KEY=your-secret-key-here-generate-a-new-one
DEBUG=False
ALLOWED_HOSTS=your-app-name.onrender.com,www.your-domain.com

# MongoDB Atlas Connection
# Get this from MongoDB Atlas: Clusters > Connect > Connect your application
# IMPORTANT: Add &tlsAllowInvalidCertificates=true to the connection string for compatibility with djongo/pymongo 3.11.4
# Example: mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&tlsAllowInvalidCertificates=true
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&tlsAllowInvalidCertificates=true
MONGODB_NAME=eduhelm_db

# Admin User (created automatically on first deploy)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@eduhelm.com
ADMIN_PASSWORD=ChangeThisSecurePassword123!

# Example MongoDB Atlas URI format:
# mongodb+srv://<username>:<password>@<cluster-name>.xxxxx.mongodb.net/?retryWrites=true&w=majority
